

<%= form_for [product, review] do |f| %>
<%= render partial: "shared_errors", locals: {obj: review} if !!review %>
  <%= f.hidden_field :product_id, value: product.id %>
  <%= f.text_area :content, class: "form-control-lg col p-3 mt-4" %>
  <%= f.submit class: "mb-5 btn btn-outline-info" %>
<% end %>