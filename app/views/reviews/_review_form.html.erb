

<%= form_for([product, review], data: {review_id: review.id}) do |f| %>
<%= render partial: "shared_errors", locals: {obj: review} if !!review %>
  <%= f.hidden_field :product_id, value: product.id %>
  <%= f.text_area :content, class: "form-control-lg col p-3" %>
  <%= f.submit class: "my-2 btn btn-outline-info" %>
<% end %>