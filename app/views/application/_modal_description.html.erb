



<!-- Button trigger modal -->
<button type="button" class="btn btn-sm btn-primary mb-4" data-toggle="modal" data-target="#<%= product.description %>">
    Description
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="<%= product.description %>" tabindex="-1" role="dialog" aria-labelledby="description" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="description">Description</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= product.description %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>